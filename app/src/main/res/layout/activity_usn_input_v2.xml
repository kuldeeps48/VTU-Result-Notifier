<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kuldeep.aadarsh.vturesultnotifier.vturesultnotifier.MainActivity"
    android:background="@drawable/happy_android"
    android:paddingTop="200dp"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_header"
        android:padding="10dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="#20FF0000"
        android:textColor="@color/textColorPrimary"
        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/colorPrimaryBackground"
        android:elevation="10dp"
        >

        <AutoCompleteTextView
            android:id="@+id/usn_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="@string/usn_edittext"
            android:inputType="textPersonName"
            android:longClickable="true"
            android:textAlignment="center"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.503"/>

        <Spinner
            android:id="@+id/select_cbcs_semester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:prompt="@string/spinner_cbcs_semester"
            android:spinnerMode="dropdown"
            android:visibility="invisible"
            android:layout_alignTop="@+id/usn_edittext"
            android:layout_alignParentEnd="true"
            app:layout_constraintLeft_toRightOf="@+id/usn_edittext"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.2"/>


        <Button
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/usn_edittext"
            android:layout_centerHorizontal="true"
            android:elevation="10dp"
            android:padding="10dp"
            android:text="@string/start_button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/usn_edittext"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/select_cbcs_semester"
            android:layout_below="@+id/start_button"
            android:layout_marginBottom="44dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorAccent"
            android:clickable="true"
            android:tint="@color/colorAccent"
            app:elevation="2dp"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/select_cbcs_semester"
            app:layout_constraintVertical_bias="0.851"
            app:rippleColor="@color/colorPrimary"
            app:srcCompat="@color/colorAccent"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="5dp"
            android:rotation="0"
            android:text="@string/prev_result"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_alignTop="@+id/floatingActionButton"
            android:layout_toEndOf="@+id/usn_edittext"
            app:layout_constraintLeft_toLeftOf="@+id/floatingActionButton"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/select_cbcs_semester"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="44dp"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintVertical_bias="0.82"/>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_input_footer"
            tools:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent">
        </com.google.android.gms.ads.AdView>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>